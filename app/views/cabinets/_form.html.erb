<%= form_with(model: cabinet) do |form| %>
  <% if cabinet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cabinet.errors.count, "error") %> prohibited this cabinet from being saved:</h2>

      <ul>
        <% cabinet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :enabled, style: "display: block" %>
    <%= form.checkbox :enabled %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :floor_id, style: "display: block" %>
    <%= form.select :floor_id, @floor_options, { include_blank: "選択してください" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
