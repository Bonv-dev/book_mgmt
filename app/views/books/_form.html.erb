<div 
   data-controller="select-place"
   data-select-place-url-value="<%= select_place_books_path %>"
   data-select-place-is-step-form-exist-value="true"
>
<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= @status_list[@latest_log.status] %>
    <%= link_to "ステータス変更",
        new_log_path(
          log: { status: @latest_log.status, book_id: book.id, user_id: @latest_log.user_id }
        ),
        class: "#{'disabled' if @latest_log.status==@my_settings[:status_discard] || action_name == 'new' }"
    %>
  </div>

  <div>
    <%= form.label :enabled, style: "display: block" %>
    <%= form.checkbox :enabled, { disabled: current_user.is_admin? ? false:true } %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :isbn, style: "display: block" %>
    <%= form.text_field :isbn %>
  </div>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.select :category_id, @category_options, { include_blank: "選択してください" } %>
  </div>

  <div>
    <%= form.label :step_id, style: "display: block" %>
    <%= select_tag :floor_id,
      options_from_collection_for_select(@floors, :id, :name, @step&.cabinet&.floor_id),
      include_blank: "選択してください",
      data: {
        action: "change->select-place#changeFloor",
        select_place_target: "floor"
      }
    %>
    <%= render partial: "select_place" %>
  </div>

  <div>
    <%= form.label :memo, style: "display: block" %>
    <%= form.text_field :memo %>
  </div>

  <div>
    <%= form.submit "Update Book", data: { action: "click->select-place#checkParams" } %>
  </div>
<% end %>
</div> <!-- select-place -->
