<div id="<%= dom_id user %>">
  <% unless current_user.is_ippan? %>
    <div>
      <strong>Enabled:</strong>
      <%= user.enabled %>
    </div>
  <% end %>

  <div>
    <strong>Name:</strong>
    <%= user.name %>
  </div>

  <div>
    <strong>Email:</strong>
    <%= user.email %>
  </div>

  <% unless current_user.is_ippan? %>
    <div>
      <strong>Is admin:</strong>
      <%= user.is_admin %>
    </div>
  
    <div>
      <strong>Is librarian:</strong>
      <%= user.is_librarian %>
    </div>
  <% end %>

</div>
